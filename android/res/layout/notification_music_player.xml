<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@android:color/transparent">

    <!-- Обложка альбома -->
    <ImageView
        android:id="@+id/notification_album_art"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_music_note"
        android:contentDescription="Album art" />

    <!-- Информация о треке -->
    <LinearLayout
        android:id="@+id/track_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@id/notification_album_art"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/notification_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notification_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#B3FFFFFF"
            android:textSize="14sp" />
    </LinearLayout>


    <ProgressBar
            android:id="@+id/notification_progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@id/notification_album_art"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:progressTint="@android:color/white"
            android:progressBackgroundTint="#40FFFFFF"
            android:max="100" />

    <LinearLayout
        android:id="@+id/controls_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notification_progress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Кнопка Previous -->
        <ImageButton
            android:id="@+id/notification_previous"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/previous"
            android:scaleType="center"
            android:src="@drawable/ic_skip_previous"
            android:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/notification_play_pause"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/play_pause"
            android:scaleType="center"
            android:src="@drawable/ic_play"
            android:tint="@android:color/white" />

        <!-- Кнопка Next -->
        <ImageButton
            android:id="@+id/notification_next"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/next"
            android:scaleType="center"
            android:src="@drawable/ic_skip_next"
            android:tint="@android:color/white" />

    </LinearLayout>

</RelativeLayout>
